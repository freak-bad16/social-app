<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="max-w-md mx-auto bg-white p-8 rounded-md shadow-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Register</h1>
        <form action="/register" method="POST">
            <!-- Name -->
            <div class="mb-4">
                <label for="name" class="block text-gray-700 font-bold mb-1">Full Name</label>
                <input type="text" name="name" id="name" required class="w-full border rounded p-2" />
            </div>

            <!-- Date of Birth -->
            <div class="mb-4">
                <label for="dob" class="block text-gray-700 font-bold mb-1">Date of Birth</label>
                <input type="date" name="dob" id="dob" required class="w-full border rounded p-2" />
            </div>

            <!-- Gender -->
            <div class="mb-4">
                <label for="gender" class="block text-gray-700 font-bold mb-1">Gender</label>
                <select name="gender" id="gender" required class="w-full border rounded p-2">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label for="email" class="block text-gray-700 font-bold mb-1">Email</label>
                <input type="email" name="email" id="email" required class="w-full border rounded p-2" />
            </div>

            <!-- Phone -->
            <div class="mb-4">
                <label for="phone" class="block text-gray-700 font-bold mb-1">Phone Number</label>
                <input type="text" name="phone" id="phone" required class="w-full border rounded p-2" />
            </div>

            <!-- Aadhar Number -->
            <div class="mb-4">
                <label for="aadharNumber" class="block text-gray-700 font-bold mb-1">Aadhar Number</label>
                <input type="text" name="aadharNumber" id="aadharNumber" required class="w-full border rounded p-2" />
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label for="password" class="block text-gray-700 font-bold mb-1">Password</label>
                <input type="password" name="password" id="password" required class="w-full border rounded p-2" />
            </div>

            <!-- Country -->
            <div class="mb-4">
                <label for="country" class="block text-gray-700 font-bold mb-1">Country</label>
                <input type="text" name="country" id="country" required class="w-full border rounded p-2" />
            </div>

            <!-- Pin Code -->
            <div class="mb-4">
                <label for="pinCode" class="block text-gray-700 font-bold mb-1">Pin Code</label>
                <input type="text" name="pinCode" id="pinCode" required class="w-full border rounded p-2" />
            </div>

            <!-- Area Type -->
            <div class="mb-4">
                <label for="areaType" class="block text-gray-700 font-bold mb-1">Area Type</label>
                <select name="areaType" id="areaType" required class="w-full border rounded p-2">
                    <option value="Urban">Urban</option>
                    <option value="Rural">Rural</option>
                </select>
            </div>

            <!-- Poverty Level -->
            <div class="mb-4">
                <label for="povertyLevel" class="block text-gray-700 font-bold mb-1">Poverty Level</label>
                <select name="povertyLevel" id="povertyLevel" required class="w-full border rounded p-2">
                    <option value="APL">APL</option>
                    <option value="BPL">BPL</option>
                    <option value="Unspecified">Unspecified</option>
                </select>
            </div>

            <!-- Captcha -->
            <div class="mb-4">
                <label for="captcha" class="block text-gray-700 font-bold mb-1">Captcha</label>
                <input type="text" name="captcha" id="captcha" required class="w-full border rounded p-2" />
            </div>

            <!-- Submit Button -->
            <div class="mb-4">
                <button type="submit" class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-700">Register</button>
            </div>
        </form>
    </div>
</body>
</html>
